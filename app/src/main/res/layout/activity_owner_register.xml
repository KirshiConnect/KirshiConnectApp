<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bgColor"
    tools:context=".owner.OwnerRegisterActivity">

    <ImageView
        android:id="@+id/ownerRegisterProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_margin="12dp" />

    <EditText
        android:id="@+id/ownerRegisterName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:paddingStart="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/ownerRegisterAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Address"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:paddingStart="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/ownerRegisterNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:paddingStart="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/ownerRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:drawableEnd="@drawable/email"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/ownerRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:drawableEnd="@drawable/password"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/ownerRegisterConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:background="@drawable/btn_design"
        android:drawableEnd="@drawable/password"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="VisualLintTextFieldSize" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ownerRegisterBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_design"/>


</LinearLayout>